<div class="left_content">
      <div class="title"><span class="title_icon"><img src="/images/bullet1.gif" alt="" /></span>Featured products</div>
      <% for featured_flower in @flowers.featured %>
      <div class="feat_prod_box">
        <div class="prod_img"><%= link_to image_tag(cycle("prod1.gif", "prod2.gif")), featured_flower %></div>
        <div class="prod_det_box">
          <div class="box_top"></div>
          <div class="box_center">
            <div class="prod_title"><% featured_flower.name =%></div>
            <p class="details"><%= featured_flower.description %></p>
            <p class="details"><%= number_to_currency featured_flower.price %></p>
            <%= link_to "- more -", featured_flower, :class => "more" %>
            <div class="clear"></div>
          </div>
          <div class="box_bottom"></div>
          <%= button_to "To Cart", line_items_path(:flower_id => featured_flower.id), 
                                                      :remote => true,
                                                      :disable_with => "Wait...",
                                                      :class => "addtocart" if user_signed_in? %>
        </div>
        <div class="clear"></div>
      </div>
      <% end %>
      <div class="title"><span class="title_icon"><img src="/images/bullet2.gif" alt="" /></span>New products</div>
      <div class="new_products">
        <% for new_flower in @flowers.latest %>
        <div class="new_prod_box"><%= link_to new_flower.name, new_flower %>
        <%= number_to_currency new_flower.price %>
          <div class="new_prod_bg"> <span class="new_icon"><img src="/images/new_icon.gif" alt="" /></span>
           <%= link_to image_tag(cycle("thumb3.gif", "thumb2.gif", "thumb1.gif")), new_flower %></div>
           <%= button_to "To Cart", line_items_path(:flower_id => new_flower.id), 
                                                      :remote => true,
                                                      :disable_with => "Wait...",
                                                      :class => "addtocart" if user_signed_in? %>
        </div>

        <% end %>
      </div>
      <div class="clear"></div>
    </div>